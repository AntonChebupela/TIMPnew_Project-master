<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="credit" author="nvoronezhskiy">

        <!-- Проверяем нет ли уже таблицы с таким названием -->
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="credit"/>
            </not>
        </preConditions>

        <!-- Создаем таблицу -->
        <createTable tableName="credit">

            <!-- Описываем колонки -->
            <column name="id"
                    type="NUMERIC(19,0)"
                    autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="percent" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="period" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="mon_pay" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="sum" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="requisites" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>


        </createTable>

    </changeSet>


</databaseChangeLog>