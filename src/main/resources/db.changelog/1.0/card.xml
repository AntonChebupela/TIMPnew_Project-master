<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="card" author="nvoronezhskiy">

        <!-- Проверяем нет ли уже таблицы с таким названием -->
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="card"/>
            </not>
        </preConditions>

        <!-- Создаем таблицу -->
        <createTable tableName="card">

            <!-- Описываем колонки -->
            <column name="number"
                    type="VARCHAR(100)"
                    autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="period" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="cvv" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="pin" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="account_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>

